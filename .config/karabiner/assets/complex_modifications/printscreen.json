{
  "title": "Use PC Print Screen button for screen capture",
  "rules": [
    {
        "description": "[R2] Print Screen to Command+Shift+4",
        "manipulators": [
            {
                "from": {
                    "key_code": "print_screen",
                    "modifiers": {
                        "optional": [
                            "caps_lock"
                        ]
                    }
                },
                "to": {
                    "key_code": "4",
                    "modifiers": [
                        "left_command",
                        "left_shift"
                    ]
                },
                "type": "basic"
            }
        ]
    },
    {
        "description": "[R2] Control+Print Screen to Control+Command+Shift+4",
        "manipulators": [
            {
                "from": {
                    "key_code": "print_screen",
                    "modifiers": {
                        "mandatory": [
                            "control"
                        ],
                        "optional": [
                            "caps_lock"
                        ]
                    }
                },
                "to": {
                    "key_code": "4",
                    "modifiers": [
                        "left_control",
                        "left_command",
                        "left_shift"
                    ]
                },
                "type": "basic"
            }
        ]
    },
    {
        "description": "[R2] Fn+Print Screen to Command+Shift+3",
        "manipulators": [
            {
                "from": {
                    "key_code": "print_screen",
                    "modifiers": {
                        "mandatory": [
                            "fn"
                        ],
                        "optional": [
                            "caps_lock"
                        ]
                    }
                },
                "to": {
                    "key_code": "3",
                    "modifiers": [
                        "left_command",
                        "left_shift"
                    ]
                },
                "type": "basic"
            }
        ]
    },
    {
        "description": "[R2] Control+Fn+Print Screen to Control+Command+Shift+3",
        "manipulators": [
            {
                "from": {
                    "key_code": "print_screen",
                    "modifiers": {
                        "mandatory": [
                            "fn",
                            "control"
                        ],
                        "optional": [
                            "caps_lock"
                        ]
                    }
                },
                "to": {
                    "key_code": "3",
                    "modifiers": [
                        "left_control",
                        "left_command",
                        "left_shift"
                    ]
                },
                "type": "basic"
            }
        ]
    },
    {
